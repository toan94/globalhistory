<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="clientjs/exPrep.js"></script>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/index.css" />
    <title>Global History</title>
  </head>
  <body>

<!-- xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx -->

<div class="wrapper">
  <%- include('nav') %>

<div class="container-fluid leftside">
  <div class="row" >

    <div class="col-sm-1 left" >
    </div>

    <div class="col-sm-8 middle">


      <div class="alert alert-info text-center" role="alert">
        <b>Attention: Exhibiton items are chosen in their respective category pages!</b>
      </div>
      <form name="exhibitionData">
            <input class="form-control form-control-lg" id="title1" type="text" placeholder="Exhibition main title " >
            <br/>
            <input class="form-control form-control-lg" id="title2" type="text" placeholder="Exhibition Sub-title" >
            <br/>
            <input class="form-control form-control-lg" id="coverImg" type="text" placeholder="Cover Image HyperLink" >
            <br/>
            <button type="button" class="btn btn-outline-secondary <%= exhibitionOpened ? 'd-none' : '' %>" id="initExhibition">Initiate Exhibition</button>
            <button type="button" class="btn btn-outline-secondary <%= exhibitionOpened ? 'd-none' : '' %>" id="previewExhibition">Preview Exhibition</button>
            <button type="button" class="btn btn-outline-danger <%= exhibitionOpened ? '' : 'd-none' %>" id="ceaseExhibition">
              <a class="text-dark" href="/ceaseExhibition">Cease Exhibition</a>
            </button>
      </form>
      <br/>
      <br/>
      <div id="previewScreen"></div>

    </div>
    <div class="col-sm-2 right" >
      <%- include('right_content') %>
      <br/>
      <div id="buttonContainer"></div>
    </div>
  </div>
</div>

</div>

<%- include('foot') %>


  </body>
</html>
