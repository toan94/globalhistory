  <body>

<!-- xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx -->

<div class="wrapper">
  <%- include('nav') %>

<div class="container-fluid leftside">
  <div class="row" >

    <div class="col-sm-1 left" >
    </div>

    <div class="col-sm-8 middle">




      <form name="itemPost">
            <input class="form-control form-control-lg" id="title" type="text" placeholder="Title" >
            <br/>
            <input class="form-control form-control-lg" id="imageSrc" type="text" placeholder="Cover Image HyperLink" >
            <br/>
            <input class="form-control form-control-lg" id="desc" type="text" placeholder="Short Description" >
            <br/>
            <div class="custom-control custom-radio">
              <input type="radio" id="customRadio1" name="category" value="facts" class="custom-control-input">
              <label class="custom-control-label" for="customRadio1">Facts</label>
            </div>
            <div class="custom-control custom-radio">
              <input type="radio" id="customRadio2" name="category" value="relics" class="custom-control-input">
              <label class="custom-control-label" for="customRadio2">Relics</label>
            </div>
            <div class="custom-control custom-radio">
              <input type="radio" id="customRadio3" name="category" value="people" class="custom-control-input">
              <label class="custom-control-label" for="customRadio3">People</label>
            </div>
            <br/>
            <textarea name="editor1" id="editor1" rows="10" cols="80">
                Your content here.
            </textarea>
            <br/>
            <div id="alert" class="alert alert-danger d-none" role="alert">
              Please fill all the inputs
            </div>
            <button type="button" class="btn btn-outline-secondary" id="submitItem">Submit</button>

            <script>
                // Replace the <textarea id="editor1"> with a CKEditor
                // instance, using default configuration.
                CKEDITOR.replace( 'editor1' );
            </script>


      </form>





    </div>
    <div class="col-sm-2 right" >
      <%- include('right_content') %>
      <br/>
      <div id="buttonContainer"></div>
    </div>
  </div>
</div>

</div>

<%- include('foot') %>


  </body>
</html>
